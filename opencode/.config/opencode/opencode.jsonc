{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoupdate": true,
  "instructions": [
    "CLAUDE.md"
  ],
  "share": "disabled",
  "formatter": {
    "prettier": {
      "disabled": false
    }
  },
  "permission": {
    "bash": {
      // Allow
      "find *": "allow",
      "rg *": "allow",
      "ls *": "allow",
      "gh issue view *": "allow",
      "gh pr view *": "allow",
      // Deny
      "rm -rf /": "deny",
      "grep *": "deny",
      // Default
      "*": "ask"
    },
    "edit": "ask",
    "webfetch": "allow"
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "grep": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  }
}