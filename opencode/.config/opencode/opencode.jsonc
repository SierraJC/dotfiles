{
  "$schema": "https://opencode.ai/config.json",
  "username": "Sierra",
  "theme": "catppuccin",
  "autoupdate": "notify",
  "default_agent": "plan",
  "share": "disabled",
  "keybinds": { "leader": "`" },
  "formatter": {
    "prettier": { "disabled": false },
    "eslint": { "disabled": false },
  },
  "compaction": { "auto": false, "prune": false },
  "server": {
    "port": 4096,
    "hostname": "0.0.0.0",
    "mdns": false,
    // "cors": ["http://localhost:4096"]
  },
  "small_model": "github-copilot/gpt-5-mini",
  "agent": {
    "plan": {
      "model": "openai/gpt-5.3-codex",
      "variant": "xhigh",
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4.5",
      "variant": "thinking",
    },
    "explore": {
      "model": "opencode/claude-haiku-4-5",
      "variant": "thinking",
    },
  },
  "experimental": { "batch_tool": true },
  "permission": {
    "bash": {
      // Default
      "*": "ask",
      // Allow
      "find *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "tree *": "allow",
      "rg *": "allow",
      "grep *": "allow",
      "ls *": "allow",
      "jq *": "allow",
      "gh issue view *": "allow",
      "gh pr view *": "allow",
      // Deny
      "rm -rf /": "deny",
    },
    "edit": {
      "*": "ask",
    },
    "codesearch": "deny",
    "lsp": "allow",
    "grep": "allow",
    "list": "allow",
    "webfetch": "ask",
    "external_directory": {
      "/tmp/**": "allow",
    },
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}",
      },
    },
    "grep": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.grep.app",
    },
  },
}
