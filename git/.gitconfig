[core]
	autocrlf = input
	editor = code --wait
	excludesfile = ~/.gitignore_global

[init]
	defaultBranch = main

[alias]
	resign = rebase --exec 'GIT_COMMITTER_DATE=\"$(git log -n 1 --format=%aD)\" git commit --amend --no-edit -n -S' -io
	aa = add -A

[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential

[include]
	path = ~/.gitconfig.local
